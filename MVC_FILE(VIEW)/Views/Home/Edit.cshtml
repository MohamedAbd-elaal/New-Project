@model EmployeeEditViewModel
@{
    var photopath = "~/Images/" +(Model.ProperyPath ?? "img.JPG");
  }
<!--to use support file upload use (enctype="multipart/form-data")-->
<form  enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post">
    <input hidden asp-for="ProperyPath" />
    <input hidden asp-for="id" />
   @* get it by default
       <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label">ID</label><!--asp-for => to go to input text-->
        <div class="col-sm-10">
           <input asp-for="Id"  class="form-control" placeholder="ID" /> 
          
         </div>
    </div>*@
     <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label><!--asp-for => to go to input text-->
        <div class="col-sm-10">
            <input asp-for="Name"  class="form-control" placeholder="Name" /> 
                <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
     <div class="form-group row">
             <label asp-for="Hoppies" class="col-sm-2 col-form-label">Hoppies</label>
        <div class="col-sm-10">
             <select asp-for="Hoppies"  class="custom-select mr-sm-2 form-control" asp-items="Html.GetEnumSelectList<Dept>()" >
                 <option value="">Select Value</option>
             </select>
        </div>
      </div>

      <div class="form-group row">
        <label asp-for="photopath" class="col-sm-2 col-form-label"></label><!--asp-for => to go to input text-->
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="photopath" multiple class="form-control custom-file-input"  /> 
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4"> 
    <img src="@photopath"asp-append-version="true" class="imageThumbnail"/>
    </div>
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group row">
           <div class="col-sm-10">
               <button type="submit" class="btn btn-primary">Update</button>
               <a asp-action="IEnumerable" asp-controller="home"  class="btn btn-primary">Cancel</a>
           </div>
      </div>
      

</form>